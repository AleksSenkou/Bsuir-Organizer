.container-settings.col-xs-4.col-sm-4.col-sm-offset-2.col-md-4.col-md-offset-4
  %body
    = simple_form_for @setting, url: instructions_new_path(@setting) do |f|
      = f.error_notification
      .input-group
        %label Timetable of job:
        .form-inline
          = f.input :beginning_of_work, label: false, placeholder: '8:00', class: 'btn btn-success'
          %label -
          = f.input :end_of_work, label: false, placeholder: '20:00'
        %label Time from home to work:
        .form-inline
          =f.input  :time_home_to_work, label: false, placeholder: '40'
          %label minutes
        %label Time from work to university:
        .form-inline
          =f.input  :time_work_to_univer, label: false, placeholder: '30'
          %label minutes
        %label От университета до дома:
        .form-inline
          =f.input  :time_univer_to_home, label: false, placeholder: '45'
          %label minutes
        %label Минимальное время работы:
        .form-inline
          =f.input  :min_work_time, label: false, placeholder: '120'
          %label minutes
      .text-center
        = f.button :submit, "Save settings", class: 'btn btn-success'
